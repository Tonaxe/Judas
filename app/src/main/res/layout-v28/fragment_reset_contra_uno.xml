<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data/>
    <LinearLayout android:id="@+id/linearResetContraUno"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylegray_900">
        <ImageView android:id="@+id/imageArrowleft"
            android:layout_gravity="start"
            android:layout_height="@dimen/_18pxh"
            android:layout_marginEnd="@dimen/_18pxh"
            android:layout_marginStart="@dimen/_18pxh"
            android:layout_marginTop="@dimen/_17pxv"
            android:layout_width="@dimen/_24pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_arrowleft"
            tools:ignore="ContentDescription" tools:src="@drawable/img_arrowleft"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearColumnhasolvidadol"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_36pxv"
            android:layout_marginEnd="@dimen/_18pxh"
            android:layout_marginStart="@dimen/_18pxh"
            android:layout_marginTop="@dimen/_67pxv"
            android:layout_width="match_parent" android:orientation="vertical">
            <TextView android:ellipsize="end"
                android:id="@+id/txtHasolvidadol"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@string/msg_has_olvidado_l"
                style="@style/txtMadabold20" tools:text="@string/msg_has_olvidado_l"/>
            <TextView android:id="@+id/txtSihasolvidado"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_14pxv"
                android:layout_width="match_parent"
                android:textColor="@color/gray_100"
                android:fontFamily="@font/mada"
                android:textFontWeight="700"
                android:text="@string/msg_si_has_olvidado"
                style="@style/txtMadalight17" tools:text="@string/msg_si_has_olvidado"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtCorreoelectrn"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_59pxv"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@string/msg_correo_electr_n"
                style="@style/txtMadabold25" tools:text="@string/msg_correo_electr_n"/>

            <EditText
                android:id="@+id/txtGroupTwo"
                style="@style/txtSolidRounded"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/_15pxv"
                android:ellipsize="end"
                android:paddingStart="@dimen/_10pxh"
                android:paddingTop="@dimen/_6pxv"
                android:paddingBottom="@dimen/_9pxv"
                android:singleLine="true"
                android:hint="@string/lbl_email"
                tools:hint="@string/lbl_email" />
            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end" android:gravity="center"
                android:id="@+id/btnEnviar"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_13pxh"
                android:layout_marginStart="@dimen/_13pxh"
                android:layout_marginTop="@dimen/_87pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_14pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_14pxv"
                android:singleLine="true"
                android:text="@string/lbl_enviar"
                android:textAllCaps="false"
                style="@style/btnSolidRounded" tools:text="@string/lbl_enviar"/>
            <LinearLayout android:gravity="center_vertical"
                android:id="@+id/linearRowtienescuenta"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_13pxh"
                android:layout_marginStart="@dimen/_100pxh"
                android:layout_marginTop="@dimen/_249pxv"
                android:layout_width="wrap_content" android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTienescuenta"
                    style="@style/txtOutfitregular13"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="0.55"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_tienes_cuenta"
                    tools:text="@string/lbl_tienes_cuenta" />

                <TextView
                    android:id="@+id/txtIniciarsesin"
                    style="@style/txtOutfitregular13"
                    android:layout_width="98dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="0.45"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_iniciar_sesi_n"
                    tools:text="@string/lbl_iniciar_sesi_n" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
