<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearColumnarrowleft"
            style="@style/groupStylegray_900"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageArrowleft"
                android:layout_width="@dimen/_24pxh"
                android:layout_height="@dimen/_18pxh"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_18pxh"
                android:layout_marginTop="@dimen/_17pxv"
                android:layout_marginEnd="@dimen/_18pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrowleft"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_arrowleft" />

            <LinearLayout
                android:id="@+id/linearColumnrestaurarlaco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18pxh"
                android:layout_marginTop="@dimen/_65pxv"
                android:layout_marginEnd="@dimen/_18pxh"
                android:layout_marginBottom="@dimen/_36pxv"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtRestaurarlaco"
                    style="@style/txtMadabold20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/msg_restaurar_la_co"
                    tools:text="@string/msg_restaurar_la_co" />

                <TextView
                    android:id="@+id/txtIntroduzcalan"
                    style="@style/txtMadalight17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/msg_introduzca_la_n"
                    android:textColor="@color/gray_100"
                    tools:text="@string/msg_introduzca_la_n" />

                <TextView
                    android:id="@+id/txtNuevacontrase"
                    style="@style/txtMadabold25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_77pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/msg_nueva_contrase"
                    tools:text="@string/msg_nueva_contrase" />

                <LinearLayout
                    android:id="@+id/linearRowpassword"
                    style="@style/groupStylebluegray_100cornerRadius"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="@dimen/_14pxv"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtPassword"
                        style="@style/txtMadabold15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_8pxv"
                        android:layout_marginBottom="@dimen/_7pxv"
                        android:layout_weight="0.79"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:hint="@string/lbl"
                        tools:hint="@string/lbl" />

                    <ImageView
                        android:id="@+id/imageEye"
                        android:layout_width="@dimen/_20pxh"
                        android:layout_height="@dimen/_18pxh"
                        android:layout_marginStart="@dimen/_188pxh"
                        android:layout_marginTop="@dimen/_12pxv"
                        android:layout_marginEnd="@dimen/_9pxh"
                        android:layout_marginBottom="@dimen/_8pxv"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_eye"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_eye" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtRepitelacontr"
                    style="@style/txtMadabold25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_48pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/msg_repite_la_contr"
                    tools:text="@string/msg_repite_la_contr" />

                <LinearLayout
                    android:id="@+id/linearRowpasswordOne"
                    style="@style/groupStylebluegray_100cornerRadius"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/_19pxv"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtPasswordOne"
                        style="@style/txtMadabold15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_8pxv"
                        android:layout_marginBottom="@dimen/_7pxv"
                        android:layout_weight="0.79"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:hint="@string/lbl"
                        tools:hint="@string/lbl" />

                    <ImageView
                        android:id="@+id/imageEyeOne"
                        android:layout_width="@dimen/_20pxh"
                        android:layout_height="@dimen/_18pxh"
                        android:layout_marginStart="@dimen/_188pxh"
                        android:layout_marginTop="@dimen/_12pxv"
                        android:layout_marginEnd="@dimen/_9pxh"
                        android:layout_marginBottom="@dimen/_8pxv"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_eye"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_eye" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRestaurarLaContrasea"
                    style="@style/btnSolidRounded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_17pxh"
                    android:layout_marginTop="@dimen/_96pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_17pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingBottom="@dimen/_17pxv"
                    android:singleLine="true"
                    android:text="@string/msg_restaurar_la_co2"
                    android:textAllCaps="false"
                    tools:text="@string/msg_restaurar_la_co2" />

                <LinearLayout
                    android:id="@+id/linearRowtienescuenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_107pxh"
                    android:layout_marginTop="@dimen/_130pxv"
                    android:layout_marginEnd="@dimen/_17pxh"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTienescuenta"
                        style="@style/txtOutfitregular13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_weight="0.55"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_tienes_cuenta"
                        tools:text="@string/lbl_tienes_cuenta" />

                    <TextView
                        android:id="@+id/txtIniciarsesin"
                        style="@style/txtOutfitregular13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2pxh"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_marginTop="@dimen/_2pxh"
                        android:layout_weight="0.45"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_iniciar_sesi_n"
                        tools:text="@string/lbl_iniciar_sesi_n" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>
