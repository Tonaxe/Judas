<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearSignIn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:orientation="vertical"
        style="@style/groupStylegray_900">

        <ImageView
            android:id="@+id/imageArrowleft"
            android:layout_width="@dimen/_24pxh"
            android:layout_height="@dimen/_18pxh"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_marginEnd="@dimen/_17pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_arrowleft"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_arrowleft" />

        <LinearLayout
            android:id="@+id/linearColumnnombredeusuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_100pxv"
            android:layout_marginEnd="@dimen/_17pxh"
            android:layout_marginBottom="@dimen/_44pxv"
            android:orientation="vertical"
            android:gravity="start">

            <TextView
                android:id="@+id/txtNombredeusuar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7pxh"
                android:layout_marginEnd="@dimen/_10pxh"
                android:singleLine="true"
                android:text="@string/msg_nombre_de_usuar"
                style="@style/txtMadabold25"
                tools:text="@string/msg_nombre_de_usuar" />

            <TextView
                android:id="@+id/txtGroupThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8pxh"
                android:layout_marginEnd="@dimen/_8pxh"
                android:layout_marginTop="@dimen/_14pxv"
                android:paddingStart="@dimen/_10pxh"
                android:paddingTop="@dimen/_10pxv"
                android:paddingBottom="@dimen/_10pxv"
                android:singleLine="true"
                android:gravity="left"
                android:hint="@string/lbl_usuario"
                style="@style/txtSolidRounded"
                tools:text="@string/lbl_usuario" />

            <TextView
                android:id="@+id/txtContrasea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7pxh"
                android:layout_marginTop="@dimen/_34pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:singleLine="true"
                android:text="@string/lbl_contrase_a"
                style="@style/txtMadabold25"
                tools:text="@string/lbl_contrase_a" />

            <LinearLayout
                android:id="@+id/linearRowpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7pxh"
                android:layout_marginTop="@dimen/_14pxv"
                android:layout_marginEnd="@dimen/_9pxh"
                android:orientation="horizontal"
                style="@style/groupStylebluegray_100cornerRadius">

                <EditText
                    android:id="@+id/txtPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.79"
                    android:layout_marginStart="@dimen/_10pxh"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:hint="@string/lbl"
                    style="@style/txtMadabold15"
                    tools:text="@string/lbl" />

                <ImageView
                    android:id="@+id/imageEye"
                    android:layout_width="@dimen/_20pxh"
                    android:layout_height="@dimen/_18pxh"
                    android:layout_marginStart="@dimen/_188pxh"
                    android:layout_marginTop="@dimen/_13pxv"
                    android:layout_marginEnd="@dimen/_9pxh"
                    android:layout_marginBottom="@dimen/_8pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_eye"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_eye" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtVerificarcontr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6pxh"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_38pxv"
                android:singleLine="true"
                android:text="@string/msg_verificar_contr"
                style="@style/txtMadabold25"
                tools:text="@string/msg_verificar_contr" />

            <LinearLayout
                android:id="@+id/linearRowpasswordOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7pxh"
                android:layout_marginTop="@dimen/_14pxv"
                android:layout_marginEnd="@dimen/_9pxh"
                android:orientation="horizontal"
                style="@style/groupStylebluegray_100cornerRadius">

                <EditText
                    android:id="@+id/txtPasswordOne"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.79"
                    android:layout_marginStart="@dimen/_10pxh"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:hint="@string/lbl"
                    style="@style/txtMadabold15"
                    tools:text="@string/lbl" />

                <ImageView
                    android:id="@+id/imageEyeOne"
                    android:layout_width="@dimen/_20pxh"
                    android:layout_height="@dimen/_18pxh"
                    android:layout_marginStart="@dimen/_188pxh"
                    android:layout_marginTop="@dimen/_13pxv"
                    android:layout_marginEnd="@dimen/_9pxh"
                    android:layout_marginBottom="@dimen/_8pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_eye"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_eye" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end" android:gravity="center"
                android:id="@+id/btnRegisrarse"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_21pxh"
                android:layout_marginStart="@dimen/_22pxh"
                android:layout_marginTop="@dimen/_64pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_14pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_14pxv"
                android:singleLine="true"
                android:text="@string/lbl_regisrarse"
                android:textAllCaps="false"
                style="@style/btnSolidRounded" tools:text="@string/lbl_regisrarse"/>

            <LinearLayout
                android:id="@+id/linearRowvectortwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_42pxv"
                android:orientation="horizontal">

                <View
                    android:id="@+id/lineVectorTwo"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_6pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_marginEnd="@dimen/_6pxh"
                    android:layout_marginBottom="@dimen/_6pxv"
                    android:layout_weight="0.34"
                    android:background="@color/gray_500" />

                <TextView
                    android:id="@+id/txtOregistrartse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_marginEnd="@dimen/_6pxh"
                    android:layout_weight="0.32"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="@string/msg_o_registrartse"
                    style="@style/txtOutfitregular12"
                    tools:text="@string/msg_o_registrartse" />

                <View
                    android:id="@+id/lineVectorThree"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_6pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_marginEnd="@dimen/_6pxh"
                    android:layout_marginBottom="@dimen/_6pxv"
                    android:layout_weight="0.34"
                    android:background="@color/gray_500" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearRowgooglelogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_22pxh"
                android:layout_marginEnd="@dimen/_22pxh"
                android:layout_marginTop="@dimen/_34pxv"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageGooglelogo"
                    android:layout_width="@dimen/_21pxh"
                    android:layout_height="@dimen/_21pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="@dimen/_120pxh"
                    android:src="@drawable/img_googlelogo"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_googlelogo" />

                <TextView
                    android:id="@+id/txtGoogle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8pxh"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_weight="0.7"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="@string/lbl_google"
                    style="@style/txtPoppinsmedium14"
                    tools:text="@string/lbl_google" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearRowtienescuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_100pxh"
                android:layout_marginEnd="@dimen/_80pxh"
                android:layout_marginTop="@dimen/_43pxv"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtTienescuenta"
                    style="@style/txtOutfitregular13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_marginRight="@dimen/_1pxh"
                    android:layout_weight="0.55"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_tienes_cuenta"
                    tools:text="@string/lbl_tienes_cuenta" />

                <TextView
                    android:id="@+id/txtIniciarsesin"
                    style="@style/txtOutfitregular13"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="0.45"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/_2pxh"
                    android:singleLine="true"
                    android:text="@string/lbl_iniciar_sesi_n"
                    tools:text="@string/lbl_iniciar_sesi_n" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
